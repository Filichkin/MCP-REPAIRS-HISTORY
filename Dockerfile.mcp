FROM python:3.12-slim

# Устанавливаем рабочую директорию
WORKDIR /app

# Устанавливаем системные зависимости
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Копируем файлы проекта
COPY backend/ /app/backend/
COPY infra/.env /app/infra/.env

# Устанавливаем uv для управления зависимостями
RUN pip install --no-cache-dir uv

# Копируем pyproject.toml и устанавливаем зависимости
COPY backend/pyproject.toml /app/backend/
RUN cd /app/backend && uv pip install --system -e .

# Меняем рабочую директорию на backend для корректных импортов
WORKDIR /app/backend

# Экспонируем порт MCP сервера
EXPOSE 8004

# Healthcheck endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1

# Запускаем MCP сервер
CMD ["python", "-m", "mcp_server.server"]
